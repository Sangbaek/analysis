#!/bin/csh -f


setenv JLAB_VERSION  1.2
setenv OSRELEASE Linux_CentOS6.5-i686-gcc4.4.7
source $JLAB_ROOT/$JLAB_VERSION/ce/jlab.csh
source /home/ungaro/analysis/farm/clas6/muCooking/cookEnvironment


set file   = (`ls run*`)
set run    = (`ls run* | awk -F_ '{print $2}'`)
set ext    = (`ls run* | awk -F_ '{print $3}' | awk -F. '{print $2}'`)
set output = $run"."$ext".mu"
set INFOS  = (\""$DATA" "$PASS" Production Data\")

echo
echo File: $file
echo

./bos2mu -DC_PLANES=1 -INFOS="$INFOS" -RUN_INDEX=$RUNI -OUTPUT=$output $file
echo Copying Files into $DIR
echo
mkdir -p $OUTPUTD
cp  *.mu $OUTPUTD

ls -alp

